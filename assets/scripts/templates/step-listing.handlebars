{{#each steps as |step|}}

  <section data-id="{{step.id}}" style="background-color:#00000050;">
    <h3 style="color:#ffffff; font-weight:500;">
      {{limit step.name 15}}
    </h3>
    <p style="color:#ffffff; font-weight:500;">step color:</p>
    <p style="color:#ffffff; font-weight:500;">
      {{#if step.color}}
        {{step.color}}
      {{else}}
        No color provided yet!
      {{/if}}
    </p>
    <p style="color:#ffffff; font-weight:500;">
      {{#if step.url}}
        {{step.url}}
      {{else}}
        No URL provided yet!
      {{/if}}
    </p>
    <button class="btn btn-primary updateStepOnHandleBar " data-id="{{step.id}}" data-toggle="modal" data-target="#updateStepModal">Update</button>
    <button class="btn btn-danger deleteStep delete" data-id="{{step.id}}">Remove Step</button>
  </section>

{{/each}}
